@page
@model CartModel
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>


<table class="table table-bordered table-hover table-striped table-opacity" width="60%">
	<colgroup>
		<col style="width : 24%">
		<col style="width : 24%">
		<col style="width : 24%">
		<col style="width : 24%">
		<col style="width : 4%">
	</colgroup>
	<thead>
		<tr class="btn-tertiary active">
			<th>
				Name
			</th>
			<th>
				Price
			</th>
			<th>
				Amount
			</th>
			<th>
				Total Price For This Item
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.cartService._cart.Items != null)
		{
			foreach (var item in Model.cartService._cart.Items.Values)
			{
				<tr class="btn-secondary">
					<td>
						@item.Name
					</td>
					<td>
						@Model.cartService.GetPrice(item.Name) kr.
					</td>
					<td>
						@Model.cartService._amount.Read(item.Name)
					</td>
					<td>
						@(Model.cartService.GetPrice(item.Name) * Model.cartService._amount.Read(item.Name)) kr.
					</td>
					<td>
						<a class="glyphicon glyphicon-plus" type="button" title="Add" asp-page="Cart" asp-route-createName="@item.Name"><i class="fa fa-edit"></i></a>

						<a class="glyphicon glyphicon-minus" type="button" title="Delete" asp-page="Cart" asp-route-deleteName="@item.Name"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<table class="table table-bordered table-hover table-striped table-opacity" width="30%"> 
	
	<colgroup>
		<col style="width : 50%">
		<col style="width : 50%">
	</colgroup>
	@if (Model.cartService._cart.Items != null) {
		<tbody>
			<td>
				Cart Total
			</td>
			<td>
				@Model.cartService.CalculateTotalPriceExTax() kr.
			</td>
		</tbody>
		<tbody>
			<td>
				Tax
			</td>
			<td>
				@(Model.cartService.CalculateTotalPriceWTax() - Model.cartService.CalculateTotalPriceExTax()) kr.
			</td>
		</tbody>
		<tbody>
			<td>
				Coupon Applied
			</td>
			<td>
				@Model.cartService.Coupon
			</td>
		</tbody>
		<tbody>
			<td>
				Checkout Total
			</td>
			<td>
				@Model.cartService.CalculateTotalPriceWTax() kr.
			</td>
		</tbody>
		<tbody>
			<td>
			<a class="btn btn-success" href="Checkout" role="button">Checkout</a>
			</td>
			<td>
			<li class="nav-item ">
				Apply Coupon <input type="text" name="SearchString">
				<input type="submit" value="Apply" />
			</li>
			</td>
		</tbody>
	}


</table>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
	Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				...
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>
