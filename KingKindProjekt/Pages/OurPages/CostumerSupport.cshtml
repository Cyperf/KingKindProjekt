   <div class="container">

        <div class="image col-lg-5">
			<img src="~/res/Kundeservice.jpg" class="img rounded-circle" alt="...">
        </div>

		<div class="col-lg-1">

		</div>

		<div class="card bg-warning right text-dark p-3 col-lg-6">
		<blockquote class="blockquote">
			<h1><i> Vi er altid klar</i></h1>

			<footer class="blockquote-footer text-dark">
					<h5><i>Selvom du måske ikke er....</i></h5>
			</footer>
		</blockquote>
		</div>

   </div>

