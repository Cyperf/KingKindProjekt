@using KingKindProjekt.Pages.OurPages;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KingKindProjekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KingKindProjekt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <style>
       
        #newsletter {
            font-size: 50px;
            font-weight: bold;
            color: black;
            background-color: white;
        }
        #newslettertilmeld {
            max-height: 60px;
            font-size: 25px;
            text-align:center;
            background-color: white;
        }  
    </style>
</head>
<body>
    <header>
        @* Picture, search bar, login and cart button *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="overflow: auto; white-space: nowrap;">
                <ul class="navbar-nav flex-grow-1 row-cols-12 align-items-center">
                    <li class="nav-item col-2">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index"><img src="/res/KindKindLogo.png" width="100%" height="auto" /></a>
                    </li>
                    <li class="nav-item col-1"></li> @* Padding *@
                    <li class="nav-item col-6">
                        @* @using (Html.BeginForm("SearchProducts", "ExtraController", FormMethod.Post))
                        {
                            <div class="input-group">
                                @Html.TextBox("SearchString")
                                <input type="submit" id="btnSearch" value="Søg" />
                            </div>
                        } *@
                        @await Component.InvokeAsync("Search")
                        @* <form method="post">
                            <div class="input-group">
                                <input asp="@KingKindProjekt.Pages.OurPages.ViewProductsModel.SearchProduct" class="form-control mr-1" placeholder="Enter search term" />
                                <input type="submit" value="Search" class="btn btn-primary" asp-route-searchItems="@KingKindProjekt.Pages.OurPages.ViewProductsModel.SearchProduct" asp-page="/OurPages/ViewProducts" />
                            </div>
                        </form> *@
                    </li>

                    <li class="nav-item col-1"></li> @* Padding *@
          
                    <li class="nav-item col-1">
                        <a class="nav-link text-dark" asp-area="" asp-page="/OurPages/@Services.AccountService.checkAccountState()">@Services.AccountService.checkAccountState()</a>
                        @if (@Services.AccountService.LoggedInAccount != null)
                        {
                            @await Component.InvokeAsync("LogOut")
                        }
                    </li>
                    <li class="nav-item col-1">
                        <a class="nav-link text-dark" asp-area="" asp-page="/OurPages/Cart">
                            <button type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart
                            </button>
                        </a>
                    </li>
                    
                </ul>
            </div>
        </nav>
        @* Normal stuff *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @* <a class="navbar-brand" asp-area="" asp-page="/Index">KingKindProjekt</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Kundesservice</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">About us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
           
        </main>
    </div>
    @* Footer ------------------------------------------- *@
    <div style="height: 150px;"></div>
    <footer class="border-top footer text-muted">

        
        @await Component.InvokeAsync("NewsletterSignup")
        @* <div id="newsletter" class="d-flex justify-content-center">
              NEWSLETTER
         </div>
        <div id="newslettertilmeld" class="d-flex justify-content-center" style="width: 100%;">
            <input type="text" placeholder="Enter E-Mail" style="width: 60%;"><br><br>
            <button id="alert-button" style="width: 10%;"
                    onclick="alert('You have been signed up!');">
                Tilmeld
            </button>
        </div> *@
        <div class="container">
            &copy; 2023 - KingKindProjekt - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>